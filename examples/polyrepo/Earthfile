
VERSION 0.7
PROJECT earthly-sa/earthly-demo

main-pipeline:
  PIPELINE 
  TRIGGER push main 
  TRIGGER pr main 
  BUILD +all-docker


all-docker:
  BUILD ./quote_client/+docker
  BUILD ./rust_server/+docker
  BUILD ./go_server/+docker

dev-up:
  LOCALLY
  RUN docker-compose up


dev-down:
  LOCALLY
  RUN docker-compose down
